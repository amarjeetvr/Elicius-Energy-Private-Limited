# Database
DATABASE_URL=mysql+pymysql://energy_user:energy_pass@db:3306/energy_db

# MQTT Broker
MQTT_BROKER_HOST=mqtt-broker
MQTT_BROKER_PORT=1883
MQTT_CLIENT_ID=energy-fastapi-client

# MQTT Topics (comma-separated)
MQTT_TOPICS=sensor/temperature,sensor/humidity,sensor/voltage,sensor/current,sensor/pressure,sensor/power,sensor/energy,sensor/frequency

# Threshold Configuration
THRESHOLD_TEMPERATURE_MIN=0
THRESHOLD_TEMPERATURE_MAX=80
THRESHOLD_HUMIDITY_MIN=10
THRESHOLD_HUMIDITY_MAX=95
THRESHOLD_VOLTAGE_MIN=180
THRESHOLD_VOLTAGE_MAX=260
THRESHOLD_CURRENT_MIN=0
THRESHOLD_CURRENT_MAX=30
THRESHOLD_PRESSURE_MIN=900
THRESHOLD_PRESSURE_MAX=1100
